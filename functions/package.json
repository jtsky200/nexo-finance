{
  "name": "nexo-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Nexo app",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
