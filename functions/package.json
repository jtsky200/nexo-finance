  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/vision": "^4.3.2",
    "@trpc/server": "^11.0.0",
    "axios": "^1.7.9",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "mammoth": "^1.11.0",
    "pdf-parse": "^2.4.5",
    "superjson": "^2.2.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/pdf-parse": "^1.1.5",
    "typescript": "^5.9.3"
  },
  "private": true
}
