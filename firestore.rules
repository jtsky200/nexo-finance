rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Reminders collection
    match /reminders/{reminderId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Finance entries collection
    match /financeEntries/{entryId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Tax profiles collection
    match /taxProfiles/{profileId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Chat conversations collection
    match /chatConversations/{conversationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Weather data collection (Phase 2)
    match /weatherData/{weatherId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // People collection
    match /people/{personId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Documents subcollection
      match /documents/{documentId} {
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/people/$(personId)).data.userId == request.auth.uid;
        allow create: if isAuthenticated() && get(/databases/$(database)/documents/people/$(personId)).data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated() && get(/databases/$(database)/documents/people/$(personId)).data.userId == request.auth.uid;
      }
    }
    
    // Chat reminders collection
    match /chatReminders/{reminderId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // User settings collection
    match /userSettings/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Shopping list items collection
    match /shoppingList/{itemId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Shopping lists collection
    match /shoppingLists/{listId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Product database collection
    match /productDatabase/{productId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Login history collection
    match /loginHistory/{loginId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // No update or delete - login history is append-only
    }
    
    // Two-factor authentication secrets collection
    match /twoFactorSecrets/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Phone numbers collection - for phone authentication
    match /phoneNumbers/{phoneNumber} {
      // Only allow users to read their own phone number
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow create/update only if the userId matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Security events collection - for security monitoring
    match /securityEvents/{eventId} {
      // Only authenticated users can create security events (for their own events)
      // System can also create events (no userId check for critical events)
      allow create: if isAuthenticated();
      // Only allow read for the user's own events or system admins (future: add admin check)
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.userId == null);
      // No update or delete - security events are immutable
    }
  }
}
